{
  "name": "flarum-gulp",
  "version": "0.2.1",
  "description": "Gulp wrapper for Flarum JavaScript compilation.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/flarum/flarum-gulp.git"
  },
  "author": "Toby Zerner <toby.zerner@gmail.com> (http://tobyzerner.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/flarum/flarum-gulp/issues"
  },
  "homepage": "https://github.com/flarum/flarum-gulp",
  "dependencies": {
    "babel-core": "^6.5.0",
    "babel-plugin-external-helpers": "^6.5.0",
    "babel-plugin-transform-es2015-modules-systemjs": "^6.5.0",
    "babel-plugin-transform-object-assign": "^6.5.0",
    "babel-plugin-transform-react-jsx": "^6.5.0",
    "babel-plugin-transform-runtime": "^6.5.0",
    "babel-preset-es2015": "^6.5.0",
    "babel-preset-react": "^6.5.0",
    "babel-eslint": "^7.0.0",
    "gulp-babel": "^6.0.0",
    "gulp-cached": "^1.0.4",
    "gulp-concat": "^2.5.2",
    "gulp-file": "^0.2.0",
    "gulp-order": "^1.1.1",
    "gulp-remember": "^0.3.0",
    "gulp-eslint": "^3.0.1",
    "gulp-if": "^2.0.1",
    "gulp-tap": "^0.1.3",
    "eslint": "^3.6.0",
    "eslint-plugin-react": "^6.4.0",
    "eslint-plugin-import": "^1.16.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-config-airbnb": "^12.0.0",
    "streamqueue": "^0.1.3"
  },
  "eslintConfig": {
    "extends": "eslint-config-airbnb",
    "rules": {
      "class-methods-use-this": "off",
      "func-names": "off",
      "import/no-unresolved": "off",
      "import/no-extraneous-dependencies": "off",
      "import/extensions": ["error", "never"],
      "react/jsx-filename-extension": ["error", { "extensions": [".js"] }],
      "react/react-in-jsx-scope": "off",
      "react/prop-types": "off",
      "react/sort-comp": ["error", {
        "order": [
          "/^constructor$/",
          "/^init$/",
          "/^initProps$/",
          "static-methods",
          "/^content$/",
          "/^view$/",
          "/^config$/",
          "everything-else",
          "/^onsubmit$/",
          "/^onerror$/"
        ]
      }]
    },
    "env": {
      "jquery": true,
      "browser": true
    },
    "globals": [
        "app",
        "m"
    ]
  }
}
